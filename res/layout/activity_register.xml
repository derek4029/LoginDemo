<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/register_edit_name"
        android:drawableLeft="@android:drawable/ic_menu_myplaces"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:hint="请输入您的用户名"/>

    <EditText
        android:id="@+id/register_edit_pwd"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="请输入您的密码"
        android:layout_below="@+id/register_edit_name"/>

    <EditText
        android:id="@+id/register_edit_pwd_confirm"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/register_edit_pwd"
        android:layout_centerHorizontal="true"
        android:hint="请确认您的密码" />

    <Button
        android:id="@+id/register_btn_ok"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textSize="20dp"
        android:background="#1cf718"
        android:layout_below="@+id/register_edit_pwd_confirm"
        android:layout_alignLeft="@+id/register_edit_pwd_confirm"
        android:layout_marginTop="20dp" />
    <Button
        android:id="@+id/register_btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textSize="20dp"
        android:background="#f71818"
        android:layout_below="@+id/register_btn_ok"
        android:layout_alignLeft="@+id/register_btn_ok"
        android:layout_marginTop="10dp" />

</RelativeLayout>
